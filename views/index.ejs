<!DOCTYPE html>
<html lang="en">

<head>
    <link href="./output.css" rel="stylesheet">
    <meta name="htmx.config" content='{"defaultIndicatorStyle":"spinner"}'>
    <script src="https://unpkg.com/htmx.org"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
</head>

<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">

    <header class="bg-white shadow-md py-6">
        <h1 class="text-4xl font-bold text-center text-indigo-600">
            <%= title %>
        </h1>
    </header>

    <main class="flex items-center justify-center py-12 px-4">

        <div class="bg-white rounded-lg shadow-lg p-8 max-w-md w-full">
            <p class="text-gray-600 text-center mb-8">Shorten your long URLs and share them easily.</p>

            <form action="/shorten" method="POST" id="urlForm">
                <div class="mb-6">
                    <label for="url" class="block text-sm font-semibold text-gray-700 mb-2">Enter URL:</label>
                    <input type="url" id="url" name="url" placeholder="https://example.com/very/long/url" required
                        class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-indigo-500 transition">
                </div>

                <button type="submit"
                    class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 rounded-lg transition duration-200 shadow-md">
                    Shorten URL
                </button>
            </form>
        </div>
    </main>
    <% if (msg !=="" && shortenedUrl !=="" ) { %>
        <!-- Success Dialog Modal -->
        <div id="successModal" class="fixed inset-0  bg-opacity-50 flex  items-center justify-center z-50">
            <div class="bg-white rounded-lg shadow-xl p-8 max-w-sm w-full mx-4 transform transition-all">
                <div class="text-center">
                    <!-- Success Icon -->
                    <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100 mb-4">
                        <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7">
                            </path>
                        </svg>
                    </div>

                    <!-- Success Message -->
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Success!</h3>
                    <p class="text-sm text-gray-500 mb-4">
                        <%= msg %>
                    </p>

                    <!-- Shortened URL Display -->
                    <div class="bg-gray-50 rounded-lg p-3 mb-4">
                        <p class="text-xs text-gray-500 mb-1">Shortened URL:</p>
                        <p id="shortenedUrl" class="text-sm font-mono text-indigo-600 break-all">
                            <%= shortenedUrl %>
                        </p>
                    </div>

                    <!-- Copy Button -->
                    <button id="copyBtn"
                        class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md transition duration-200 mb-3">
                        Copy URL
                    </button>

                    <!-- Close Button -->
                    <button onclick="document.getElementById('successModal').classList.add('hidden')"
                        class="w-full bg-gray-300 hover:bg-gray-400 text-gray-700 font-medium py-2 px-4 rounded-md transition duration-200">
                        Close
                    </button>
                </div>
            </div>
        </div>
        <% } %>
            <script>
                const url = document.getElementById('shortenedUrl');
                document.getElementById('copyBtn').addEventListener('click', function () {
                    const urlText = url.innerText;
                    const fullUrl = `http://localhost:3000/${urlText}`;
                    navigator.clipboard.writeText(fullUrl).then(() => {
                        alert('URL copied to clipboard! You can now share it. and paste it in the address bar to visit the original URL.');
                    }).catch(err => {
                        console.error('Failed to copy: ', err);
                    });
                });
            </script>
</body>

</html>